extends base.pug

block content
    if errorMessage 
        span=errorMessage 
    form(method="POST", enctype="multipart/form-data") 
        label(for="video") Video File
        input(type="file", required, accept="video/*", id="video", name="video") 
        input(name="title", placeholder="Title", required, type="text", maxLength=80)
        input(name="description", placeholder="Description", required, type="text", minLength=20)
        input(name="hashtags", placeholder="Hashtags, separated by coma", required, type="text")
        input(type="submit", value="Upload video")